{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Bevy Project",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--package",
                    "planetarium",
                    "--bin",
                    "planetarium"
                ],
                "filter": {
                    "name": "planetarium",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        },
        {
            "name": "Debug Bevy Project",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--package",
                    "planetarium",
                    "--bin",
                    "planetarium",
                    "--locked"
                ],
                "filter": {
                    "name": "planetarium",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
        }
    ]
}